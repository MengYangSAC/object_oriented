import java.util.Scanner;
public class main_dice {

	public static void main(String[] args) 
	{
		Scanner input = new Scanner(System.in);
		int rolls;
		int x;
		System.out.printf("how many rolls do you want\n");
		rolls = input.nextInt();
		Dice_ Dice = new Dice_(rolls);
		System.out.printf("the dice has rolled %d times\n", rolls);
		x = Dice.Throw(rolls);
		
		int average = x/rolls;
		System.out.printf("the average is %d", average);
		

	}

}
